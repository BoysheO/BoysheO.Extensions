<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
        <LangVersion>8.0</LangVersion>
        <RootNamespace>BoysheO</RootNamespace>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>BoysheO</Authors>
        <Version>1.0.5</Version>
        <RepositoryUrl>https://github.com/BoysheO/BoysheO.Extensions</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageVersion>2.0.13</PackageVersion>
        <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
        <PackageReleaseNotes>high performance,useful,silly API </PackageReleaseNotes>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <NoWarn>1701;1702;1591</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <NoWarn>1701;1702;1591</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Memory" Version="4.5.4" />
        <PackageReference Include="System.ValueTuple" Version="4.5.0" Condition="'$(TargetFramework)' == 'net46'" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Extensions\IntExtensions.IsInRange.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>IntExtensions.IsInRange.Generated.cs</LastGenOutput>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Extensions\IntExtensions.IsInRange.Generated.cs">
        <AutoGen>True</AutoGen>
        <DesignTime>True</DesignTime>
        <DependentUpon>IntExtensions.IsInRange.tt</DependentUpon>
      </Compile>
      <Compile Update="BoysheO.Extensions.Benchmark\Class1.cs">
        <Link>BoysheO.ExtensionsBenchmark\Class1.cs</Link>
      </Compile>
    </ItemGroup>

</Project>
